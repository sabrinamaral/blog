<div>
  <div>
    <p class="absolute inset-0 flex justify-center items-end pointer-events-none opacity-20 text-[#cccfd2] text-[12em] font-bold overflow-hidden">rails</p>
    <p class="absolute inset-0 flex justify-start items-start pointer-events-none opacity-20 text-[#cccfd2] text-[20em] font-bold overflow-hidden">tech</p>
    <p class="absolute inset-0 flex justify-end mb-8 items-start pointer-events-none opacity-20 text-[#cccfd2] text-[32em] font-bold overflow-hidden">js</p>
  </div>

    <div class="grid grid-cols-2 mt-16 mx-8">
      <% @blog_posts.each do |post|  %>
      <% @blog_posts %>
      <div class="flex content-center justify-between w-md mx-auto my-2 p-2 border rounded-lg border-gray-300 hover:bg-neutral-100">
        <div class="px-3">
          <p class="m-0 leading-6 font-bold capitalize"><%= link_to post.title, post %></p>
          <small class="text-gray-600">Some text here</small>
        </div>
        <div class="flex items-center">
          <p class="text-gray-400 font-bold"><i class="fa-regular fa-clock"></i> <%= post.reading_time %> min</p>
          <a href="#" class="text-gray-600 ml-4 text-sm hover:text-gray-700"></a>
          <%= image_tag "rails_logo.png", alt: "Rails logo", class: "h-9 w-auto" %>
        </div>
      </div>
      <% end %>
    </div>

</div>
