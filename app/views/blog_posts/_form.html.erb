<%= form_with model: blog_post, class: "space-y-6 w-3/5 m-auto" do |form| %>
  <% if form.object.errors.any? %>
  <div class="bg-red-100 text-red-700 p-4 rounded">
    <% form.object.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :title, class: "block font-bold mt-6 mb-1 text-gray-700" %>
    <%= form.text_field :title, class: "block w-full px-3 py-2 border rounded-md border border-gray-400 text-[#1B1820]" %>
  </div>

  <div class="space-y-2">
    <%= form.label :body, "Content", class: "block font-bold mt-6 mb-1 text-gray-700" %>
    <%= form.text_area :body, class: "block w-full h-50 px-3 py-2 border rounded-md border border-gray-400 text-[#1B1820]" %>
  </div>

  <div>
    <%= form.button form.object.new_record? ? "Create" : "Update", class: "w-full font-bold bg-teal-600 text-white py-2 px-4 rounded-md hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" %>
  </div>
<% end %>
