<%= form_with model: blog_post, class: "space-y-6 w-3/5 m-auto" do |form| %>
  <% if form.object.errors.any? %>
  <div class="bg-red-100 text-red-700 p-4 rounded">
    <% form.object.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :title, class: "block font-bold mt-6 mb-1 text-gray-700" %>
    <%= form.text_field :title, class: "block w-full px-3 py-2 rounded-md border border-gray-400 text-[#1B1820]" %>
  </div>

  <div class="space-y-2">
    <%= form.label :body, "Content", class: "block font-bold mt-6 mb-1 text-gray-700" %>
    <%= form.text_area :body, class: "block w-full h-48 px-3 py-2 rounded-md border border-gray-400 text-[#1B1820]" %>
  </div>

  <div class="space-y-2 relative">
    <%= form.label :category, class: "block font-bold mt-6 mb-1 text-gray-700" %>
    <%= form.select :category, ["rails", "javascript", "general"], prompt: "Select a category", class: "appearance-none w-full h-10 px-4 border border-gray-400 rounded text-[#1B1820] focus:outline-none focus:ring-2 focus:ring-gray-500"%>
    <i class="fa-solid fa-chevron-down absolute right-3 top-1/2 transform -translate-y-1/2 pointer-events-none text-gray-500 pt-2"></i>
  </div>

  <div>
    <%= form.button form.object.new_record? ? "Create" : "Update", class: "w-full font-bold bg-teal-600 text-white py-2 px-4 rounded-md hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" %>
  </div>
<% end %>
